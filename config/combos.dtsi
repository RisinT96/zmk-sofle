// Hack: Make HRM combos tap-only (cf, https://github.com/zmkfirmware/zmk/issues/544).
#define ZMK_COMBO_8(NAME, TAP, POS, LAYERS, COMBO_MS, IDLE_MS, HOLD, SIDE)      \
    MAKE_HRM(hm_combo_##NAME, &kp, TAP, SIDE THUMBS)                            \
    ZMK_COMBO_6(NAME, &hm_combo_##NAME HOLD 0, POS, LAYERS, COMBO_MS, IDLE_MS)

#define COMBO_TERM_FAST 20
#define COMBO_TERM_SLOW 30

#define COMBO_IDLE_FAST 150
#define COMBO_IDLE_SLOW 50

// Combos overlapping HRMs are set up as hold-taps themselves to allow for instantaneous
// chording of mods. Custom hold-tap instances can be bootstrapped on the go using the
// 8-argument version of ZMK_COMBO defined earlier.

/* ================================ Horizontal Combos - Left Hand =============================== */
ZMK_COMBO(esc, &hml LS(LALT)  ESC, LM3 LM2, LAYER_BASE LAYER_NAV, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(tab, &hml LS(LCTRL) TAB, LM2 LM1, LAYER_BASE LAYER_NAV, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* =============================== Horizontal Combos - Right Hand =============================== */
ZMK_COMBO(plus,  &kp PLUS,  RN3 RN4, LAYER_BASE LAYER_NAV, COMBO_TERM_FAST, COMBO_IDLE_FAST)

ZMK_COMBO(bspc,  &kp BSPC,  RT1 RT2, LAYER_BASE LAYER_NAV, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(del,   &kp DEL,   RT2 RT3, LAYER_BASE LAYER_NAV, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(minus, &kp MINUS, RT3 RT4, LAYER_BASE LAYER_NAV, COMBO_TERM_FAST, COMBO_IDLE_FAST)

ZMK_COMBO(bslh,  &kp BSLH,  RM1 RM2, LAYER_BASE LAYER_NAV, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(pipe,  &kp PIPE,  RM2 RM3, LAYER_BASE LAYER_NAV, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(equal, &kp EQUAL, RM3 RM4, LAYER_BASE LAYER_NAV, COMBO_TERM_FAST, COMBO_IDLE_FAST)

ZMK_COMBO(under, &kp UNDER, RB3 RB4, LAYER_BASE LAYER_NAV, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* ================================= Vertical Combos - Left Hand ================================ */
ZMK_COMBO(ldr, &leader, LM5 LB5, LAYER_BASE LAYER_NAV, COMBO_TERM_SLOW, COMBO_IDLE_FAST, LS(LCTRL), KEYS_R)

/* ================================ Vertical Combos - Right Hand ================================ */
